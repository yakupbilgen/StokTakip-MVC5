<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stok Takip Uygulaması v0.1</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Stok Takip Uygulaması", "Index", "Urun", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse col-md-7">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kategoriler", "Index", "Kategori")</li>
                    <li>@Html.ActionLink("Ürünler", "Index", "Urun")</li>
                    <li>@Html.ActionLink("Müşteriler", "Index", "Musteri")</li>
                    <li>@Html.ActionLink("Satışlar", "Index", "Satis")</li>
                </ul>
            </div>
            <div class="justify-content-end">
                <ul class="nav navbar-nav justify-content-end">
                    <li><a href="#">Yardım</a></li>
                    <li><a href="#">İletişim</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><b>&copy;</b>@DateTime.Now.Year - <b>Stok Takip Uygulaması</b> v0.1</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
