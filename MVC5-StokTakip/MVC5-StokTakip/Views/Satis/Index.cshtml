@using MVC5_StokTakip.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBLSATISLAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Müşteri</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var satis in Model)
        {
            <tr>
                <td>@satis.SATISID</td>
                <td>@satis.URUN</td>
                <td>@satis.MUSTERI</td>
                <td>@satis.ADET</td>
                <td>@satis.FIYAT</td>
                <td><a class="btn btn-danger" href="Satis/Delete">Sil/@satis.SATISID</a></td>
                <td><a class="btn btn-primary" href="Satis/Update/@satis.SATISID">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-warning" href="Satis/Ekle/">Yeni Satış İşlemi Yap</a>

