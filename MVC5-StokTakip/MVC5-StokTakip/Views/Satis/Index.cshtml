@using MVC5_StokTakip.Models.Entity
@model List<TBLSATISLAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Müşteri</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var satis in Model)
        {
        <tr>
            <td>@satis.SATISID</td>
            <td>@satis.URUN</td>
            <td>@satis.MUSTERI</td>
            <td>@satis.ADET</td>
            <td>@satis.FIYAT</td>
            <td><a class="btn btn-danger" href="Satis/Sil">Sil/@satis.SATISID</a></td>
            <td><a class="btn btn-primary" href="Satis/Guncelle/@satis.SATISID">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<a class="btn btn-warning" href="Satis/YeniSatisEkle/">Yeni Satış İşlemi Yap</a>

