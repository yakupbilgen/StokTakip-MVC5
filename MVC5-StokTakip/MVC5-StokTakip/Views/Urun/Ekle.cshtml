@model MVC5_StokTakip.Models.Entity.TBLURUNLER

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı:</label>
        <input type="text" class="form-control" name="URUNAD" />
    </div>
    <div>
        <label>Ürün Markası:</label>
        <input type="text" class="form-control" name="URUNMARKA" />
    </div>
    <div>
        <label>Ürün Kategorisi:</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyatı:</label>
        <input type="text" class="form-control" name="URUNFIYAT" />
    </div>
    <div>
        <label>Ürün Adeti:</label>
        <input type="text" class="form-control" name="URUNSTOKADET" />
    </div>
    <div>
        <button class="btn btn-info">Ekle</button>
    </div>
</form>

